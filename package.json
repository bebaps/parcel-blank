{
  "name": "parcel-blank",
  "version": "1.0.0",
  "description": "A blank starting point for creating a static site using Parcel.js",
  "main": "index.html",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bebaps/parcel-blank.git"
  },
  "bugs": {
    "url": "https://github.com/bebaps/parcel-blank/issues"
  },
  "author": {
    "name": "Alexander Persky",
    "email": "info@alexanderpersky.com",
    "url": "https://www.alexanderpersky.com"
  },
  "scripts": {
    "dev": "parcel index.html",
    "watch": "parcel watch index.html",
    "build": "parcel build index.html --no-source-maps",
    "pug:dev": "parcel src/index.pug",
    "pug:open": "parcel src/index.pug --open 'google chrome'",
    "pug:build": "parcel build src/index.pug",
    "pug:watch": "parcel watch src/index.pug",
    "clean": "rm -rf dist .cache",
    "lint:css": "stylelint --fix src/css/**/*.css",
    "lint:js": "eslint src/js/**/*.js"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "eslint": "^6.7.2",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.0",
    "sass": "^1.26.10",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  }
}
